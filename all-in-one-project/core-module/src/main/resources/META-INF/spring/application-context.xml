<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="infrastructure-context.xml"/>

    <!-- ========================== -->
    <!--   Business configuration   -->
    <!-- ========================== -->

    <bean id="userRepository" class="com.pradip.web.core.repository.impl.UserRepositoryImpl"/>
    <bean id="todoRepository" class="com.pradip.web.core.repository.impl.TodoRepositoryImpl"/>

    <bean id="userService" class="com.pradip.web.core.service.impl.UserServiceImpl"/>
    <bean id="todoService" class="com.pradip.web.core.service.impl.TodoServiceImpl"/>

</beans>